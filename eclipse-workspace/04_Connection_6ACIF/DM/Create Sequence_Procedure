create or replace
PROCEDURE PROC_SEQ_CUSTOMER IS
  V_CNT NUMBER;
BEGIN
SELECT COUNT(*) INTO V_CNT
FROM ALL_SEQUENCES
WHERE SEQUENCE_OWNER = 'DEMO' AND
      SEQUENCE_NAME = 'SEQ_CUSTOMER_ID';
      
      IF V_CNT = 0 THEN
        EXECUTE IMMEDIATE 'CREATE SEQUENCE SEQ_CUSTOMER_ID
                           START WITH 10000
                           INCREMENT BY 1
                           CACHE 50';
                            COMMIT;
  END IF;
END PROC_SEQ_CUSTOMER;
